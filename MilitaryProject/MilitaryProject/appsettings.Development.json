{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "ConnectionStrings": {
    "DefaultConnection": "Server=tcp:military-project-web-server.database.windows.net,1433;Initial Catalog=MilitaryDB;Persist Security Info=False;User ID=military-project-web-server-admin;Password=Password123;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;"
  },

  "AllowedHosts": "*",

  "Serilog": {
    "Using": [
      "Serilog.Sinks.File",
      "Serilog.Sinks.Console",
      "Serilog.Formatting.Compact",
      "Serilog.Sinks.AzureTableStorage"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "../logs/webapi-.log",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      },
      {
        "Name": "AzureTableStorage",
        "Args": {
          "storageTableName": "Logs",
          "connectionString": "DefaultEndpointsProtocol=https;AccountName=militarystorage;AccountKey=x5cV14Q3jW3GAl1zpBDZdwqy9Ewa0L6XwAIlkofAu72iM99XmiCl74cBpLngRnFHYP32KMsa6aVx+AStTAWAjw==;EndpointSuffix=core.windows.net"
        }
      }
    ],
    "Enrich": [
      "FromLogContent",
      "Thread",
      "Process",
      "Environment",
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  },
  "Seq": {
    "ServerUrl": "http://localhost:5341",
    "ApiKey": "1234567890",
    "MinimumLevel": "Trace",
    "LevelOverride": {
      "Microsoft": "Warning"
    }
  },
  "hotReloadEnabled": true
}