@using MilitaryProject.Domain.ViewModels.Brigade
@model BrigadeViewModel

@{
    ViewData["Title"] = "Delete Brigade";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <h1 class="card-header text-center">Delete Brigade</h1>
                <div class="card-body">
                    <h4>Are you sure you want to delete this brigade?</h4>
                    <div>
                        <label>Name:</label>
                        <span>@Model.Name</span>
                    </div>
                    <form asp-controller="Brigade" asp-action="Delete" method="post">
                        <input type="hidden" asp-for="ID" />
                        <button type="submit" class="btn btn-danger mt-3">Delete</button>
                        <a asp-controller="Brigade" asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
