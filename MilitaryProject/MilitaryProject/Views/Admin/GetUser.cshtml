@using MilitaryProject.Domain.Entity
@using MilitaryProject.Domain.ViewModels.Brigade
@model User

@{
    ViewData["Title"] = "Get User";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="text-center">Brigade</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>                       
                        <th>Brigade Id</th>
                        <th>Email</th>
                        <th>Name</th>
                        <th>Lastname</th>
                        <th>Role</th>
                        <th>Edit</th>
                        <th>Age</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.ID</td>
                        <td>@Model.BrigadeID</td>
                        <td>@Model.Email</td>
                        <td>@Model.Name</td>
                        <td>@Model.Lastname</td>
                        <td>@Model.Role</td>
                        <td>@Model.Age</td>
                        <td><a class="btn btn-primary" asp-controller="Brigade" asp-action="Update" asp-route-id="@Model.ID">Edit</a></td>
                        <td><a class="btn btn-danger" asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@Model.ID">Delete</a></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
