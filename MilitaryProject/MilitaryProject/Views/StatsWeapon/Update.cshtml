@using MilitaryProject.Domain.ViewModels.Stats
@model StatsWeaponViewModel

@{
    ViewData["Title"] = "Edit Weapon";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <h1 class="card-header text-center">Edit Weapon</h1>
                <div class="card-body">
                    <form asp-controller="StatsWeapon" asp-action="Update" method="post">
                        <input type="hidden" asp-for="WeaponID" />
                        <div class="form-group">
                            <label asp-for="WeaponName">Name:</label>
                            <input asp-for="WeaponName" class="form-control" />
                            <span asp-validation-for="WeaponName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="WeaponType">Type:</label>
                            <input asp-for="WeaponType" class="form-control" />
                            <span asp-validation-for="WeaponType" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="WeaponWeight">Weaight:</label>
                            <input asp-for="WeaponWeight" class="form-control" />
                            <span asp-validation-for="WeaponWeight" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="WeaponPrice">Price:</label>
                            <input asp-for="WeaponPrice" class="form-control" />
                            <span asp-validation-for="WeaponPrice" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="WeaponCount">Count:</label>
                            <input asp-for="WeaponCount" class="form-control" />
                            <span asp-validation-for="WeaponCount" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NeededWeaponCount">Needed count:</label>
                            <input asp-for="NeededWeaponCount" class="form-control" />
                            <span asp-validation-for="NeededWeaponCount" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Update</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
