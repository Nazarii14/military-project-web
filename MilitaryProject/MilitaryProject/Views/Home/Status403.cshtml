@{
    Layout = null;
    <title>Error - Automarket</title>
}

<body class="error_page">
    <main>
        <div class="error_bg">
            <div class="error_container">
                <div class="first_error_column">
                    <span class="error_text">Error</span>
                    <span class="error_code">403</span>
                </div>
                <div class="second_error_column">
                    <span class="error_title">Oops! ACCESS IS FORBIDDEN.</span>
                    <br /><span class="error_description">
                        Sorry, but you do not have the necessary
                        permissions to access this page.
                        <br /><span class="error_description">
                            Please contact an administrator or return to the main page
                        </span>
                    </span>
                    <a class="error_back_button" asp-controller="Home" asp-action="Index">
                        <span class="readmore_text">Back to Homepage</span>
                    </a>
                </div>
            </div>
        </div>
    </main>
</body>