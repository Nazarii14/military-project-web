@using MilitaryProject.Domain.Entity
@using MilitaryProject.Domain.ViewModels.Request
@model Request

@{
    ViewData["Title"] = "Getbyid";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="text-center">Request</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Brigade Name</th>
                        <th>Weapon Name</th>
                        <th>Weapon Quantity</th>
                        <th>Ammunition Name</th>
                        <th>Ammunition Quantity</th>
                        <th>Message</th>
                        <th>Status</th>
                        <th>Edit</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.ID</td>
                        <td>@Model.Brigade.Name</td>
                        <td>@Model.Weapon.Name</td>
                        <td>@Model.WeaponQuantity</td>
                        <td>@Model.Ammunition.Name</td>
                        <td>@Model.AmmunitionQuantity</td>
                        <td>@Model.Message</td>
                        <td>@Model.RequestStatus</td>
                        <td><a class="btn btn-primary" asp-controller="Request" asp-action="Update" asp-route-id="@Model.ID">Edit</a></td>
                        <td><a class="btn btn-danger" asp-controller="Request" asp-action="Delete" asp-route-id="@Model.ID">Delete</a></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

