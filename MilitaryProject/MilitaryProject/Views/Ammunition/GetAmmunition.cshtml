@using MilitaryProject.Domain.ViewModels.Ammunition
@model AmmunitionViewModel

@{
    ViewData["Title"] = "Ammunition Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    Ammunition Details
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Type</dt>
                        <dd class="col-sm-8">@Model.Type</dd>

                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Price</dt>
                        <dd class="col-sm-8">@Model.Price.ToString("C")</dd>

                        <dt class="col-sm-4">Size</dt>
                        <dd class="col-sm-8">@Model.Size</dd>
                    </dl>
                    <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@Model.ID" class="btn btn-danger">Delete</a>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
