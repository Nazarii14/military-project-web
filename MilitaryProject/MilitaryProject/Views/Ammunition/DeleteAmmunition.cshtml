@using MilitaryProject.Domain.Entity
@using MilitaryProject.Domain.ViewModels.Ammunition
@model List<AmmunitionViewModel>

@{
    ViewData["Title"] = "Ammunitions";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="text-center">Ammunitions</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Type</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Size</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ammo in Model)
                    {
                        <tr>
                            <td>@ammo.Type</td>
                            <td>@ammo.Name</td>
                            <td>@ammo.Price.ToString("C")</td> <!-- Format as currency -->
                            <td>@ammo.Size</td>
                            <td><a asp-controller="Ammunition" asp-action="Edit" asp-route-id="@ammo.ID">Edit</a></td>
                            <td><a asp-controller="Ammunition" asp-action="Delete" asp-route-id="@ammo.ID">Delete</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
