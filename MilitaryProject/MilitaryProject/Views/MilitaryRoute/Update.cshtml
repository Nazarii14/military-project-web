﻿@using MilitaryProject.Domain.Entity
@using MilitaryProject.Domain.ViewModels.MilitaryRoute
@model MilitaryRoute

@{
    ViewData["Title"] = "Edit MilitaryRoute";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <h1 class="card-header text-center">Edit MilitaryRoute</h1>
                <div class="card-body">
                    <form asp-controller="MilitaryRoute" asp-action="Update" method="post">
                        <div class="form-group">
                            <label asp-for="WeaponQuantity">Weapon Quantity:</label>
                            <input asp-for="WeaponQuantity" class="form-control" />
                            <span asp-validation-for="WeaponQuantity" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="AmmunitionQuantity">Ammunition Quantity:</label>
                            <input asp-for="AmmunitionQuantity" class="form-control" />
                            <span asp-validation-for="AmmunitionQuantity" class="text-danger"></span>
                        </div>
                        <div>
                             <label asp-for="StartPoint">StartPoint:</label>
                            <input asp-for="StartPoint" class="form-control" />
                            <span asp-validation-for="StartPoint" class="text-danger"></span>
                        </div>
                        <div>
                             <label asp-for="Destination">Destination:</label>
                            <input asp-for="Destination" class="form-control" />
                            <span asp-validation-for="Destination" class="text-danger"></span>
                        </div>
                        <div>
                             <label asp-for="DeliveryDate">DeliveryDate:</label>
                            <input asp-for="DeliveryDate" class="form-control" />
                            <span asp-validation-for="DeliveryDate" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Edit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
